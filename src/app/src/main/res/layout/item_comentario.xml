<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center" >

    <View
        android:id="@+id/toLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000" />

  <!--Comentario-->
  <LinearLayout
      android:id="@+id/commentViewHolder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/toLine" >

      <!--FtPerfil-->
      <de.hdodenhof.circleimageview.CircleImageView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/ftUtilizadorComent"
          android:layout_width="40dp"
          android:layout_height="40dp" />

      <!--Texto Comentario-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <!--Nome do utilizador que fez o comentario-->
          <TextView
              android:id="@+id/nomeUserComentario"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="2dp"
              android:textColor="@color/white"
              android:text="Nome Utilizador" />

          <!--Conteudo do comentario-->
          <TextView
              android:id="@+id/conteudoComentario"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textSize="10dp"
              android:textColor="@color/white" />

      </LinearLayout>
  </LinearLayout>

</RelativeLayout>